---
import SiteLayout from '../layouts/SiteLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<SiteLayout title="Thank you" description="Thanks for reaching out to Jonathan Kohlmeier.">
  <section class="section-gap">
    <div class="container-page mx-auto max-w-2xl space-y-6 text-center">
      <SectionHeader
        eyebrow="Message received"
        title="Thanks for reaching out!"
        description="I appreciate the note and typically respond within two business days. In the meantime, explore recent essays or learn more about advisory work."
        align="center"
      />
      <div class="flex flex-wrap justify-center gap-3">
        <a class="btn btn-primary" href="/writing/">Read the latest essays</a>
        <a class="btn btn-secondary" href="/services/">Explore services</a>
      </div>
    </div>
  </section>
</SiteLayout>
