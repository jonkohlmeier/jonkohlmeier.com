---
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import { AUTHOR, SITE_DESCRIPTION, SITE_TITLE, SITE_URL, SOCIAL } from '../consts';

interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata;
}

const site = Astro.site ?? new URL(SITE_URL);
const canonicalURL = new URL(Astro.url.pathname, site);

const { title, description = SITE_DESCRIPTION, image } = Astro.props;
const ogImageUrl = image
  ? new URL(image.src, site)
  : new URL('/favicon.svg', site);
const twitterHandle = SOCIAL.twitter.startsWith('@') ? SOCIAL.twitter : `@${SOCIAL.twitter}`;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', site)} />
<meta name="generator" content={Astro.generator} />
<meta name="author" content={AUTHOR.name} />
<meta name="description" content={description} />
<meta name="keywords" content="revops, leadership, web performance, jonathan kohlmeier" />

<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
<link rel="canonical" href={canonicalURL} />

<title>{title}</title>
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:alt" content={title} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={twitterHandle} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />
