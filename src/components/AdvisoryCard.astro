---
interface Props {
  name: string;
  description: string;
  who: string;
  outcomes: string[];
  ctaLabel: string;
  ctaLink: string;
}

const { name, description, who, outcomes, ctaLabel, ctaLink } = Astro.props;
---

<article class="card flex h-full flex-col gap-5">
  <div class="space-y-3">
    <span class="badge">For operators</span>
    <h3 class="text-2xl font-semibold text-[var(--color-text)]">{name}</h3>
    <p class="text-sm text-subtle">{description}</p>
    <p class="text-sm text-muted">
      <strong class="text-[var(--color-text)]">Ideal for:</strong> {who}
    </p>
  </div>
  <div class="space-y-3">
    <p class="text-sm font-semibold text-[var(--color-text)]">Outcomes</p>
    <ul class="space-y-2 text-sm text-subtle">
      {outcomes.map((item) => (
        <li>â€¢ {item}</li>
      ))}
    </ul>
  </div>
  <a class="btn btn-primary self-start" href={ctaLink}>{ctaLabel}</a>
</article>
